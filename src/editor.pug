            label.toggle#tile-grid
                input(type="checkbox" name="room-grid" title="toggle grid")
                include /icons/grid.svg
    #palette-picker(hidden)
        #palette-picker-palettes.column.radio-select(title="select palette")
            label#palette-picker-template(hidden)
                input(type="radio" name="palette-picker-select" value=`${y},${x}` title=`select palette ${y}`)
#controls
    include /pages/room-select-window.pug
    include /pages/draw-tile/frame-adjust-window.pug
    #upper-toolbar
        #mode-select.horizontal-capsule.radio-select(title="mode-select")
            label
                input(type="radio" name="mode-select" value="playtest" title="playtest" autocomplete="off")
                include /icons/play.svg
            label
                input(type="radio" name="mode-select" value="palettes" title="edit palettes")
                include /icons/palette.svg
            label
                input(type="radio" name="mode-select" value="draw-tiles" title="edit tiles")
                include /icons/pencil.svg
            label
                input(type="radio" name="mode-select" value="draw-room" title="edit rooms")
                include /icons/tilemap.svg
            //- label
                input(type="radio" name="mode-select" value="events" title="events")
                include /icons/events.svg
        #undo-row.button-row
            button(name="undo" title="undo")
                include /icons/undo.svg
            button(name="redo" title="redo")
                include /icons/redo.svg
            button(name="save" title="save")
                include /icons/disc.svg
    include /pages/playtest/controls.pug
    include /pages/edit-colors/controls.pug
    include /pages/draw-tile/controls.pug
    include /pages/draw-room/controls.pug
